<link rel="stylesheet" href="/css/home.css">
<script src="/js/app.js"></script>
<center>
    <div class="d-grid gap-2 mt-3 habitCreation">
        <form action="/habit/create" method="post">
            <input type="text" placeholder="What's your new Habit.." name="newHabit" class="mt-4 newHabit" required><br>
            <div class="dateSection mt-3">
                <div class="mt-3" style="font-weight: 600;">
                    <label for="startDate">Start Date</label><br>
                    <input type="date" id="startDate" name="startDate" required><br>
                </div>
                <div class="mt-3" style="font-weight: 600;">
                    <label for="startDate">End Date</label><br>
                    <input type="date" id="endDate" name="endDate" required><br>
                </div>
                <div>
                    <label for="routine" style="font-weight: 600;">Routine</label><br>
                    <select name="routine" id="routine">
                        <option value="None" selected>None</option>
                        <option value="Daily">Daily</option>
                        <option value="Twice a Week">Twice a Week</option>
                        <option value="Thrice a Week">Thrice a Week</option>
                    </select>
                </div>
            </div>
            <button class="btn btn-primary mt-5 col-6" type="submit"
                style="color: white;text-decoration: none;font-size: 1.5rem;">
                ADD A NEW HABIT
            </button>
        </form>
    </div>
</center>
<div class="habitCont mt-5 mx-auto col-10">
    <h1 style="text-align: center;">List of Habits</h1>
    <div class="habitList">
        <% if(habits){ %>
            <ul class="ulList my-5" style="list-style: none;">
                <% habits.forEach((item)=>{ %>
                    <li>
                        <span class="habitTitle">
                            <h1 style="color: red;"><%- item.title %></h1>
                        </span>
                        <span class="arrange mt-3">
                            <span class="start">
                                <span><b>Start Date</b></span><br>
                                <span class="sDate">
                                    <%= item.startDate %>
                                </span>
                            </span>
                            <span class="end">
                                <span><b>End Date</b></span><br>
                                <span class="eDate">
                                    <%= item.endDate %>
                                </span>
                            </span>
                            <span class="total me-5">
                                <span><b>Routine</b></span><br>
                                <span class="tDate">
                                    <%= item.routine %>
                                </span>
                            </span>
                            <span class="viewCalendar">
                                <button style="background: none;border: none;" class="calendarBtn"
                                    onclick="showCalendar('<%= item._id %>')"><i
                                        class="fa-solid fa-calendar-days"></i></button>
                            </span>
                            <span class="delete">
                                <a href="/habit/delete/<%=item.id%>" style="color: black;">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </span>
                        </span>
                        <div style="text-align: center; margin-top: 10px;">
                            <span class="completed" style="margin-right: 10px;"><i class="fa-solid fa-circle"
                                    style="color: #69bf3b;margin-right: 5px;"></i>Completed</span>
                            <span class="ncompleted"><i class="fa-solid fa-circle"
                                    style="color: #e11c0e;margin-right: 5px;"></i>Not
                                Completed</span>
                        </div>
                        <div id="calendar-<%=item.id%>" class="hidden">
                        </div>
                    </li>
                    <% }) %>

            </ul>
            <% } %>
    </div>
</div>